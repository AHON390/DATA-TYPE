import tkinter as tk
import random

# Function to play the game
def play(choice):
    options = ["Rock", "Paper", "Scissors"]
    computer_choice = random.choice(options)

    if choice == computer_choice:
        result.set(f"Computer chose {computer_choice}. It's a Tie!")
    elif (choice == "Rock" and computer_choice == "Scissors") or \
         (choice == "Paper" and computer_choice == "Rock") or \
         (choice == "Scissors" and computer_choice == "Paper"):
        result.set(f"Computer chose {computer_choice}. You Win!")
    else:
        result.set(f"Computer chose {computer_choice}. You Lose!")

# Create main window
root = tk.Tk()
root.title("Rock Paper Scissors Game")

# Game title
tk.Label(root, text="Rock Paper Scissors", font=("Arial", 16, "bold")).pack(pady=10)

# Result display
result = tk.StringVar()
tk.Label(root, textvariable=result, font=("Arial", 14)).pack(pady=20)

# Buttons for choices
button_frame = tk.Frame(root)
button_frame.pack()

tk.Button(button_frame, text="Rock", width=15, command=lambda: play("Rock")).grid(row=0, column=0, padx=10)
tk.Button(button_frame, text="Paper", width=15, command=lambda: play("Paper")).grid(row=0, column=1, padx=10)
tk.Button(button_frame, text="Scissors", width=15, command=lambda: play("Scissors")).grid(row=0, column=2, padx=10)

# Run application
root.mainloop()
